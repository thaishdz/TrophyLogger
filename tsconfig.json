{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "src/shared/types" // mi directorio de tipos
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}